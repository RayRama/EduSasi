<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/postListHorizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/cardview_light_background"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="1dp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_200sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/horizontalImgView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:src="@drawable/gradient_background"
                android:scaleType="centerCrop" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_60sdp"
                app:cardBackgroundColor="#222"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="@dimen/_20sdp">

                <TextView
                    android:id="@+id/horizontalCategory"
                    android:text="About Us"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/horizontalTexView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Sejarah berdirinya organisasi TerraByte"
                android:textColor="#222"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>