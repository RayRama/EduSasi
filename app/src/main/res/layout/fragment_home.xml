<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity.Fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <VideoView
                    android:id="@+id/videoHeader"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/_200sdp" />

                <RelativeLayout
                    android:id="@+id/Header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:background="@drawable/gradient_home"
                    android:elevation="5dp">

                    <RelativeLayout
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_50sdp">

                        <View
                            android:alpha="0.5"
                            android:id="@+id/viewDivider"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="3dp"
                            android:background="@android:color/white"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_1sdp"/>

                        <TextView
                            android:id="@+id/headerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/viewDivider"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/opensans_regular"
                            android:text="Youth Innovation of Future\nTechnology"/>

                        <androidx.cardview.widget.CardView
                            android:layout_below="@id/headerText"
                            android:layout_width="@dimen/_250sdp"
                            android:layout_centerHorizontal="true"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_10sdp">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_10sdp">

                                <TextView
                                    android:id="@+id/textChampions"
                                    android:layout_marginTop="@dimen/_6sdp"
                                    android:layout_width="@dimen/_200sdp"
                                    android:layout_height="wrap_content"
                                    android:text="Selamat Datang, Champions"
                                    android:textSize="@dimen/_13sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textStyle="bold"/>

                                <ImageView
                                    android:id="@+id/logoChampions"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_width="@dimen/_24sdp"
                                    android:layout_height="@dimen/_24sdp"
                                    android:src="@mipmap/ic_launcher_round"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/main"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/Header">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"/><Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"/><Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"/><Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"/><Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"/><Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"/>

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>
        <RelativeLayout
            android:id="@+id/headerHome1"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="@dimen/_50sdp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/navBtn1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="12.5dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_menu"
                android:rotation="180"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/_11sdp"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/darker"
                android:text="Home"
                android:fontFamily="@font/titilliumweb_bold"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/daynight1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12.5dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_moon"
                android:background="?android:selectableItemBackground"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/headerHome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/navBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="12.5dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_menu_white"
                    android:rotation="180"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@android:color/white"
                    android:text="Home"
                    android:fontFamily="@font/titilliumweb_bold"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/daynight"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="12.5dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_moon"
                    android:background="?android:selectableItemBackground"/>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>